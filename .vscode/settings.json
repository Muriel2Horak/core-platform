{
  // 🔍 Obecné
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.vscode": false,
    "**/target": true,
    "**/node_modules": true,
    "**/.DS_Store": true
  },
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // 🐍 Python (pro tooly nebo migrace)
  "python.defaultInterpreterPath": "/usr/bin/python3",

  // 🧪 Testy
  "testing.autoRun.delay": 1000,
  "testing.autoRun.mode": "default",

  // 🧑‍💻 Frontend (React + TypeScript)
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "prettier.requireConfig": true,
  "eslint.workingDirectories": [
    { "directory": "frontend", "changeProcessCWD": true },
    { "directory": "auth", "changeProcessCWD": true }
  ],
  // removed deprecated eslint.packageManager

  // ➕ TypeScript SDK z node_modules (důležité pro monorepo/moderní TS)
  "typescript.tsdk": "node_modules/typescript/lib",

  // ☕ Java (Spring Boot backend)
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.format.settings.url": ".vscode/java-formatter.xml",
  "java.format.settings.profile": "GoogleStyle",
  "java.codeGeneration.generateComments": true,

  // 🎯 Java Maven import (spoléhat na Maven místo ručních sourcePaths)
  "java.import.maven.enabled": true,
  "java.import.gradle.enabled": false,
  "java.maven.downloadSources": true,
  "java.maven.downloadJavadoc": true,
  "java.autobuild.enabled": true,

  // 🐳 Docker
  "docker.languageserver.formatter.enable": true,

  // 🔁 Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  // ☕ Java Runtime
  "java.configuration.runtimes": [],
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx4G -Xms100m -Xlog:disable",
  // Volitelné: čistší LS
  "java.compile.nullAnalysis.mode": "automatic",
  "maven.terminal.useJavaHome": true,

  // 🛠️ Java Workspace Settings
  "java.configuration.workspaceCacheLimit": 90,
  "java.project.sourcePaths": [
    "backend/src/main/java"
  ],
  "java.project.referencedLibraries": [
    "backend/target/dependency/*.jar"
  ],
  "java.configuration.maven.userSettings": "",
  "java.project.outputPath": "backend/target/classes",
  "spring-boot.ls.problem.application-properties.enabled": true,
  "java.debug.settings.onBuildFailureProceed": true
}