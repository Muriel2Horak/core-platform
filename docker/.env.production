# üöÄ PRODUCTION Environment Configuration
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=core-platform-prod

# üåê Domain & SSL
DOMAIN=yourdomain.com
HTTP_PORT=80
HTTPS_PORT=443
SSL_EMAIL=admin@yourdomain.com

# üõ°Ô∏è Frontend
FRONTEND_TARGET=production
FRONTEND_PORT=80
FRONTEND_INTERNAL_PORT=80
FRONTEND_VOLUME_MODE=ro
API_URL=https://${DOMAIN}/api
AUTH_URL=https://${DOMAIN}/auth

# üèóÔ∏è Backend  
BACKEND_TARGET=production
BACKEND_PORT=8080

# üîê Keycloak
KEYCLOAK_PORT=8081
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=${KEYCLOAK_ADMIN_PASSWORD}
KC_HTTP_ENABLED=false
KC_HOSTNAME_STRICT_HTTPS=true
KEYCLOAK_ISSUER_URI=https://${DOMAIN}/auth/realms/core-platform
KEYCLOAK_INTERNAL_URI=http://keycloak:8080/auth/realms/core-platform
CORS_ORIGINS=https://${DOMAIN}

# üóÑÔ∏è Database
DB_PORT=5432
DATABASE_URL=jdbc:postgresql://db:5432/core

# üìä Monitoring
GRAFANA_PORT=3001
LOKI_PORT=3100
GF_AUTH_ANONYMOUS_ENABLED=false
GRAFANA_PASSWORD=${GRAFANA_PASSWORD}

# üîê Security (from secrets management)
KEYCLOAK_CLIENT_SECRET=${KEYCLOAK_CLIENT_SECRET}
APP_SECRET_KEY=${APP_SECRET_KEY}
JWT_SIGNING_KEY=${JWT_SIGNING_KEY}

# üîí Production optimizations
LOG_LEVEL=INFO
SPRING_PROFILES_ACTIVE=production