{
  "id": null,
  "uid": "infra-overview",
  "title": "Infra Overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "browser",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "CPU Utilization (%)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        { "refId": "A", "expr": "(1 - avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m]))) * 100" }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Memory Utilization (%)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        { "refId": "A", "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100" }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Disk Utilization (%)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        { "refId": "A", "expr": "(1 - (sum by (instance, mountpoint) (node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay|aufs\"})) / sum by (instance, mountpoint) (node_filesystem_size_bytes{fstype!~\"tmpfs|overlay|aufs\"}))) * 100" }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Container CPU by Service (cores)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        { "refId": "A", "expr": "sum by (container_label_com_docker_compose_service) (rate(container_cpu_usage_seconds_total{image!=\"\"}[5m]))" }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Container Memory by Service (bytes)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        { "refId": "A", "expr": "sum by (container_label_com_docker_compose_service) (container_memory_working_set_bytes{image!=\"\"})" }
      ]
    }
  ]
}
