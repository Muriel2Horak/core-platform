{
  "id": null,
  "uid": "loki-overview",
  "title": "Loki Overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "browser",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Recent logs (core-*)",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "{container=~\".+\"}"
        }
      ],
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "dedupStrategy": "none"
      }
    },
    {
      "id": 2,
      "type": "logs",
      "title": "DB logs",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 12 },
      "targets": [
        { "refId": "A", "expr": "{job=\"db\"}" },
        { "refId": "B", "expr": "{job=\"docker\",service=\"db\"}" }
      ],
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "dedupStrategy": "none"
      }
    }
  ]
}
