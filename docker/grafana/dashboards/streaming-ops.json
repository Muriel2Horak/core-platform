{
  "dashboard": {
    "title": "Core Streaming - Operations",
    "uid": "streaming-ops",
    "tags": ["streaming", "operations"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Work State - Updating",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "core_stream_workstate_updating",
            "legendFormat": "Updating"
          }
        ],
        "options": {
          "colorMode": "value"
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Locks Expired (5m)",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(core_stream_locks_expiring_total[5m]))",
            "legendFormat": "Expired"
          }
        ],
        "options": {
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "DLQ Messages (Total)",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(core_stream_dlq_total)",
            "legendFormat": "DLQ"
          }
        ],
        "options": {
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Outbox Oldest Unsent (seconds)",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "time() - core_stream_outbox_oldest_unsent_timestamp",
            "legendFormat": "Age"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 300, "color": "yellow"},
                {"value": 900, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "Work State Transitions",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "core_stream_workstate_updating",
            "legendFormat": "Updating"
          },
          {
            "expr": "core_stream_workstate_idle",
            "legendFormat": "Idle"
          }
        ]
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Lock Expiry Rate",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(core_stream_locks_expiring_total[1m])",
            "legendFormat": "Locks/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 7,
        "type": "table",
        "title": "DLQ Messages by Entity",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum by (entity) (core_stream_dlq_total)",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {"entity": "Entity", "Value": "DLQ Count"}
            }
          }
        ]
      },
      {
        "id": 8,
        "type": "table",
        "title": "Queue Depth by Priority",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum by (priority) (core_stream_cmd_queue_depth)",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {"priority": "Priority", "Value": "Queue Depth"}
            }
          }
        ]
      }
    ]
  }
}
