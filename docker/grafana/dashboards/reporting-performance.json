{
  "dashboard": {
    "title": "Reporting Module - Performance & Health",
    "uid": "reporting-module",
    "version": 1,
    "timezone": "browser",
    "schemaVersion": 38,
    "panels": [
      {
        "id": 1,
        "type": "timeseries",
        "title": "Query Response Time (p50, p95, p99)",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_server_requests_seconds_bucket{uri=~\"/api/reports/.*\"}[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{uri=~\"/api/reports/.*\"}[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_server_requests_seconds_bucket{uri=~\"/api/reports/.*\"}[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Request Rate (req/min)",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_total{uri=~\"/api/reports/.*\"}[1m])) * 60",
            "legendFormat": "Total Requests/min",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_server_requests_total{uri=~\"/api/reports/.*\",status=~\"2..\"}[1m])) * 60",
            "legendFormat": "Success (2xx)/min",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_server_requests_total{uri=~\"/api/reports/.*\",status=~\"4..\"}[1m])) * 60",
            "legendFormat": "Client Errors (4xx)/min",
            "refId": "C"
          },
          {
            "expr": "sum(rate(http_server_requests_total{uri=~\"/api/reports/.*\",status=~\"5..\"}[1m])) * 60",
            "legendFormat": "Server Errors (5xx)/min",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Circuit Breaker State",
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "reporting_circuit_breaker_state",
            "legendFormat": "{{circuit_breaker}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "options": { "0": { "text": "CLOSED", "color": "green" } } },
              { "type": "value", "options": { "0.5": { "text": "HALF_OPEN", "color": "yellow" } } },
              { "type": "value", "options": { "1": { "text": "OPEN", "color": "red" } } }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.5, "color": "yellow" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "type": "timeseries",
        "title": "Circuit Breaker Failure Rate (%)",
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 8 },
        "targets": [
          {
            "expr": "reporting_circuit_breaker_failure_rate",
            "legendFormat": "{{circuit_breaker}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": { "mode": "palette-classic" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 30, "color": "yellow" },
                { "value": 50, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "In-Flight Queries (Deduplicated)",
        "gridPos": { "h": 6, "w": 6, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "reporting_query_inflight",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 5, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area"
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "Rate Limit Hit Rate (429 responses)",
        "gridPos": { "h": 6, "w": 6, "x": 18, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_total{uri=~\"/api/reports/.*\",status=\"429\"}[1m])) * 60",
            "legendFormat": "429 Rate Limit Hits/min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 7,
        "type": "table",
        "title": "Top Slowest Queries",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.99, sum(rate(http_server_requests_seconds_bucket{uri=~\"/api/reports/.*\"}[5m])) by (le, uri)))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "uri": "Endpoint",
                "Value": "p99 Latency (s)"
              }
            }
          }
        ]
      }
    ],
    "refresh": "10s",
    "time": { "from": "now-1h", "to": "now" },
    "timepicker": {},
    "tags": ["reporting", "performance"],
    "annotations": {
      "list": []
    }
  }
}
