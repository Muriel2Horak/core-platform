# üîß DEVELOPMENT Environment Configuration
ENVIRONMENT=development
COMPOSE_PROJECT_NAME=core-platform-dev

# üåê Domain & SSL
DOMAIN=core-platform.local
HTTP_PORT=80
HTTPS_PORT=443
SSL_EMAIL=dev@core-platform.local

# üõ°Ô∏è Frontend
FRONTEND_TARGET=development
FRONTEND_PORT=3000
FRONTEND_INTERNAL_PORT=3000
FRONTEND_VOLUME_MODE=rw
API_URL=https://${DOMAIN}/api
AUTH_URL=https://${DOMAIN}/auth

# üèóÔ∏è Backend  
BACKEND_TARGET=development
BACKEND_PORT=8080

# üîê Keycloak
KEYCLOAK_PORT=8081
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KC_HTTP_ENABLED=false
KC_HOSTNAME_STRICT_HTTPS=false
KEYCLOAK_ISSUER_URI=https://${DOMAIN}/auth/realms/admin
KEYCLOAK_INTERNAL_URI=http://keycloak:8080/auth/realms/admin
CORS_ORIGINS=https://${DOMAIN}

# üóÑÔ∏è Database
DB_PORT=5432
DATABASE_URL=jdbc:postgresql://db:5432/core

# üìä Monitoring (optional)
GRAFANA_PORT=3001
LOKI_PORT=3100
GF_AUTH_ANONYMOUS_ENABLED=true
GRAFANA_PASSWORD=admin

# üîê Security (development keys - change in production!)
KEYCLOAK_CLIENT_SECRET=dev-secret-change-in-prod
APP_SECRET_KEY=dev-app-secret-key-change-in-prod
JWT_SIGNING_KEY=dev-jwt-signing-key-change-in-prod