# syntax=docker/dockerfile:1

FROM maven:3.9.6-eclipse-temurin-21 AS builder
WORKDIR /app

# ğŸ“‹ Copy Maven settings for reliability
COPY docker/maven-settings-template.xml /root/.m2/settings.xml

# ğŸ—ï¸ Layer 1: Copy only pom.xml for dependency caching
# Build context je nynÃ­ root (.), takÅ¾e backend soubory jsou v backend/
COPY backend/pom.xml .

# ğŸš€ Download dependencies with cache mount - better reliability
RUN --mount=type=cache,target=/root/.m2 \
  mvn -B -U dependency:go-offline

# ğŸ—ï¸ Layer 2: Copy source code (separate layer for better cache)
COPY backend/src ./src

# ğŸš€ Package with cache mount - reuse dependencies
RUN --mount=type=cache,target=/root/.m2 \
  mvn -B -U package -DskipTests

FROM eclipse-temurin:21
WORKDIR /app
COPY --from=builder /app/target/*.jar app.jar

# ğŸ”’ SSL: Copy SSL certificates for HTTPS communication with Keycloak  
# Build context je root (.), takÅ¾e ssl/ je pÅ™Ã­mo dostupnÃ©
COPY ssl/ /etc/ssl/backend/

# ğŸ”’ SSL: Import SSL certificate do Java truststore BÄšHEM BUILDU (jako root)
RUN if [ -f /etc/ssl/backend/cert.pem ]; then \
  echo "ğŸ” Importing SSL certificate to Java truststore during build..."; \
  keytool -importcert -noprompt \
  -alias core-platform-local \
  -file /etc/ssl/backend/cert.pem \
  -keystore $JAVA_HOME/lib/security/cacerts \
  -storepass changeit \
  && echo "âœ… SSL certificate imported successfully" \
  || echo "âš ï¸ SSL certificate import failed (non-critical)"; \
  else \
  echo "âš ï¸ No SSL certificate found at /etc/ssl/backend/cert.pem"; \
  fi

# ğŸ”’ SSL: Copy startup script (uÅ¾ nebude dÄ›lat SSL import, jen spustÃ­ aplikaci)
COPY backend/start-backend.sh /usr/local/bin/start-backend.sh
RUN chmod +x /usr/local/bin/start-backend.sh

# SpouÅ¡tÄ›j jako ne-root uÅ¾ivatel
RUN groupadd -r app && useradd -r -g app -u 10001 appuser && chown -R appuser:app /app

USER appuser:app
EXPOSE 8080
ENTRYPOINT ["/usr/local/bin/start-backend.sh"]