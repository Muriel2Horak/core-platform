# syntax=docker/dockerfile:1

FROM maven:3.9.6-eclipse-temurin-21 AS builder
WORKDIR /app

# Build context je nyn√≠ root (.), tak≈æe backend soubory jsou v backend/
COPY backend/pom.xml .
COPY backend/src ./src

RUN mvn -B dependency:go-offline
RUN mvn -B package -DskipTests

FROM eclipse-temurin:21
WORKDIR /app
COPY --from=builder /app/target/*.jar app.jar

# üîí SSL: Copy SSL certificates for HTTPS communication with Keycloak  
# Build context je root (.), tak≈æe ssl/ je p≈ô√≠mo dostupn√©
COPY ssl/ /etc/ssl/backend/

# üîí SSL: Copy startup script for SSL certificate import
# Build context je root (.), tak≈æe backend/start-backend.sh je dostupn√©
COPY backend/start-backend.sh /usr/local/bin/start-backend.sh
RUN chmod +x /usr/local/bin/start-backend.sh

# Spou≈°tƒõj jako ne-root u≈æivatel, ale nejd≈ô√≠ve umo≈æni p≈ô√≠stup k Java cacerts
RUN groupadd -r app && useradd -r -g app -u 10001 appuser && chown -R appuser:app /app

# üîí SSL: Umo≈æni appuser upravovat Java truststore pro SSL import
RUN chown root:app $JAVA_HOME/lib/security/cacerts && \
  chmod 664 $JAVA_HOME/lib/security/cacerts

USER appuser:app
EXPOSE 8080
ENTRYPOINT ["/usr/local/bin/start-backend.sh"]