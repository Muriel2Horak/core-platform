{
  "realm": "admin",
  "enabled": true,
  "displayName": "Core Platform",
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "rememberMe": true,
  "verifyEmail": false,
  "editUsernameAllowed": false,
  "registrationEmailAsUsername": false,
  "internationalizationEnabled": true,
  "supportedLocales": ["cs", "en"],
  "defaultLocale": "cs",
  "loginTheme": "core-material",
  "accountTheme": "keycloak",
  "adminTheme": "keycloak",
  "emailTheme": "keycloak",
  "attributes": {
    "frontendUrl": "https://${DOMAIN}",
    "userProfileEnabled": "false",
    "requirePasswordUpdateOnFirstLogin": "false",
    "_browser_header.contentSecurityPolicy": "frame-src 'self' https://${DOMAIN} https://*.core-platform.local; frame-ancestors 'self' https://${DOMAIN} https://*.core-platform.local; object-src 'none';",
    "_browser_header.strictTransportSecurity": "max-age=31536000; includeSubDomains",
    "_browser_header.xFrameOptions": "SAMEORIGIN",
    "_browser_header.xContentTypeOptions": "nosniff",
    "_browser_header.referrerPolicy": "no-referrer"
  },
  "requiredActions": [
    {
      "alias": "VERIFY_EMAIL",
      "name": "Verify Email",
      "providerId": "VERIFY_EMAIL",
      "enabled": false,
      "defaultAction": false
    },
    {
      "alias": "UPDATE_PROFILE",
      "name": "Update Profile",
      "providerId": "UPDATE_PROFILE", 
      "enabled": false,
      "defaultAction": false
    },
    {
      "alias": "CONFIGURE_TOTP",
      "name": "Configure OTP",
      "providerId": "CONFIGURE_TOTP",
      "enabled": true,
      "defaultAction": false
    },
    {
      "alias": "UPDATE_PASSWORD",
      "name": "Update Password", 
      "providerId": "UPDATE_PASSWORD",
      "enabled": true,
      "defaultAction": false
    }
  ],
  "users": [
    {
      "username": "test",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "email": "test.user@example.com",
      "credentials": [
        { "type": "password", "value": "${TEST_USER_PASSWORD:Test.1234!}", "temporary": false }
      ],
      "realmRoles": ["CORE_ROLE_USER"],
      "requiredActions": [],
      "attributes": {
        "department": ["IT - Vývoj"],
        "position": ["Senior Developer"],
        "manager": ["test_admin"],
        "costCenter": ["IT-001"],
        "location": ["Praha - Karlín"],
        "phone": ["+420 987 654 321"],
        "deputy": ["test_admin"],
        "deputyReason": ["dovolená"],
        "deputyFrom": ["2025-10-22"],
        "deputyTo": ["2025-11-05"]
      }
    },
    {
      "username": "test_admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "Administrator",
      "email": "test.admin@example.com",
      "credentials": [
        { "type": "password", "value": "${TEST_ADMIN_PASSWORD:Test.1234!}", "temporary": false }
      ],
      "realmRoles": ["CORE_ROLE_ADMIN"],
      "requiredActions": [],
      "attributes": {
        "department": ["IT - Vývoj"],
        "position": ["Vedoucí vývojového týmu"],
        "costCenter": ["IT-001"],
        "location": ["Praha - Karlín"],
        "phone": ["+420 123 456 789"]
      }
    },
    {
      "username": "service-account-backend-admin-service",
      "enabled": true,
      "serviceAccountClientId": "backend-admin-service",
      "requiredActions": [],
      "clientRoles": {
        "realm-management": ["manage-users", "view-users", "view-realm", "manage-realm"]
      }
    }
  ],
  "roles": {
    "realm": [
      { 
        "name": "CORE_ROLE_USER", 
        "description": "Basic user role for core platform"
      },
      { 
        "name": "CORE_USER_MANAGER", 
        "description": "User manager role for core platform"
      },
      { 
        "name": "CORE_ROLE_ADMIN", 
        "description": "Administrator role for core platform",
        "composite": true,
        "composites": {
          "realm": ["CORE_USER_MANAGER"]
        }
      }
    ]
  },
  "clients": [
    {
      "clientId": "api",
      "name": "API",
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false
    },
    {
      "clientId": "backend-admin-service",
      "name": "Backend Admin Service", 
      "description": "Service account for backend to access Keycloak Admin API",
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": false,
      "enabled": true,
      "standardFlowEnabled": false,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": false,
      "secret": "${KEYCLOAK_ADMIN_CLIENT_SECRET}"
    },
    {
      "clientId": "web",
      "name": "web",
      "protocol": "openid-connect",
      "publicClient": true,
      "enabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "rootUrl": "https://${DOMAIN}/",
      "redirectUris": [
        "https://${DOMAIN}/*",
        "http://localhost:3000/*",
        "http://localhost/*"
      ],
      "webOrigins": [
        "https://${DOMAIN}",
        "+"
      ],
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ]
}
