events {
    worker_connections 1024;
}

http {
    # MIME types
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    
    # Basic optimizations
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    server_tokens off;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss image/svg+xml text/html;
    
    # WebSocket upgrade map
    map $http_upgrade $connection_upgrade {
        default upgrade;
        ''      close;
    }
    
    # Upstream definitions
    upstream frontend {
        server frontend:80;
    }
    
    upstream backend {
        server backend:8080;
    }
    
    upstream keycloak {
        server keycloak:8443;
    }
    
    upstream grafana {
        server grafana:3000;
    }
    
    # ðŸŒŸ UNIVERZÃLNÃ SERVER BLOCK - vÅ¡echny subdomÃ©ny vÄetnÄ› admin
    server {
        listen 443 ssl http2;
        # âœ… ZJEDNODUÅ ENO: zachytÃ¡vÃ¡ VÅ ECHNY subdomÃ¡ny vÄetnÄ› admin
        server_name ${DOMAIN} *.${DOMAIN};
        
        # SSL Configuration
        ssl_certificate /etc/nginx/ssl/cert.pem;
        ssl_certificate_key /etc/nginx/ssl/key.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA128-SHA256:ECDHE-RSA-AES256-SHA384;
        ssl_prefer_server_ciphers off;
        ssl_session_cache shared:SSL:10m;
        ssl_session_timeout 10m;
        
        # Security headers
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header X-XSS-Protection "1; mode=block" always;
        # CSP - pro hlavnÃ­ aplikaci (NE pro /core-admin/monitoring/)
        # CSP se aplikuje jen na non-monitoring endpointy (viz location specifickÃ© CSP nÃ­Å¾e)
        
        # ðŸ”‘ BFF JWKS endpoint (for Grafana JWT verification)
        # Grafana requires HTTPS for JWK_SET_URL, so we proxy internal HTTP endpoint via Nginx SSL
        location = /.well-known/jwks.json {
            proxy_pass http://core-backend:8080/.well-known/jwks.json;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # Disable buffering to avoid caching stale keys
            proxy_buffering off;
        }
        
        # ï¿½ðŸ“Š GRAFANA SSO: Redirect without trailing slash to prevent SPA fallback
        location = /core-admin/monitoring {
            return 301 /core-admin/monitoring/;
        }
        
        # ðŸ“Š GRAFANA SSO: Internal auth bridge endpoint
        location = /_auth/grafana {
            internal;
            proxy_pass http://backend/internal/auth/grafana;
            # CRITICAL: Pass ALL cookies from original request (auth_request doesn't forward cookies automatically)
            # $http_cookie is from the PARENT request, not the subrequest
            proxy_set_header Cookie $http_cookie;
            proxy_set_header X-Original-URI $request_uri;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass_request_body off;
            proxy_set_header Content-Length "";
        }
        
        # ðŸ“Š GRAFANA STATIC ASSETS - NO AUTH (public files, prevent rate limit)
        location ^~ /core-admin/monitoring/public/ {
            # Static assets don't need authentication
            proxy_pass http://grafana;
            proxy_set_header Host $host;
            
            # Cache static assets
            expires 1h;
            add_header Cache-Control "public, immutable";
        }
        
        # ðŸ“Š GRAFANA PROXY with SSO via BFF JWT - UNIFIED PREFIX: /core-admin/monitoring
        # CRITICAL: Use ^~ prefix to give this location priority over FE catch-all location /
        location ^~ /core-admin/monitoring/ {
            # Authenticate via BFF
            auth_request /_auth/grafana;
            auth_request_set $grafana_token $upstream_http_grafana_jwt;
            auth_request_set $grafana_org_id $upstream_http_x_grafana_org_id;
            
            # Pass JWT and Org ID to Grafana
            proxy_set_header X-Org-JWT $grafana_token;
            proxy_set_header X-Grafana-Org-Id $grafana_org_id;
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # WebSocket support for live dashboards
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_http_version 1.1;
            
            # Timeouts for long-running queries
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
            
            # CSP for iframe embedding - allow wildcard subdomains
            add_header Content-Security-Policy "frame-ancestors 'self' https://*.${DOMAIN}" always;
            
            # DO NOT strip prefix - Grafana serves from subpath (serve_from_sub_path=true)
            # Forward full path /core-admin/monitoring/* to Grafana
            proxy_pass http://grafana;
        }
        
        #  KEYCLOAK PATHS - transparentnÄ› pro vÅ¡echny subdomÃ©ny
        location /realms/ {
            proxy_pass https://keycloak;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header X-Forwarded-Host $host;
            
            proxy_cookie_flags ~ secure samesite=lax;
            
            # WebSocket support
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_http_version 1.1;
            proxy_cache_bypass $http_upgrade;
            
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
            proxy_buffering off;
            
            proxy_ssl_verify off;
        }
        
        # ðŸ” KEYCLOAK ADMIN CONSOLE - transparentnÄ› pro vÅ¡echny subdomÃ©ny
        location /admin/ {
            proxy_pass https://keycloak;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header X-Forwarded-Host $host;
            
            proxy_cookie_flags ~ secure samesite=lax;
            
            # WebSocket support pro admin console
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_http_version 1.1;
            proxy_cache_bypass $http_upgrade;
            
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
            proxy_buffering off;
            
            proxy_ssl_verify off;
        }
        
        # ðŸŽ¨ KEYCLOAK RESOURCES - statickÃ© soubory
        location /resources/ {
            proxy_pass https://keycloak;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header X-Forwarded-Host $host;
            
            # DÅ®LEÅ½ITÃ‰: Zachovat Content-Type header z Keycloaku
            # NepouÅ¾Ã­vat add_header, kterÃ½ by mohl pÅ™epsat Content-Type
            expires 1h;
            
            proxy_connect_timeout 30s;
            proxy_send_timeout 30s;
            proxy_read_timeout 30s;
            
            proxy_ssl_verify off;
        }
        
        # ðŸŽ¨ KEYCLOAK THEMES
        location /themes/ {
            proxy_pass https://keycloak;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header X-Forwarded-Host $host;
            
            # DÅ®LEÅ½ITÃ‰: Zachovat Content-Type header z Keycloaku
            expires 1h;
            
            proxy_connect_timeout 30s;
            proxy_send_timeout 30s;
            proxy_read_timeout 30s;
            
            proxy_ssl_verify off;
        }
        
        # ðŸ“± KEYCLOAK JS ADAPTER
        location /js/ {
            proxy_pass https://keycloak;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header X-Forwarded-Host $host;
            
            # DÅ®LEÅ½ITÃ‰: Zachovat Content-Type header z Keycloaku
            expires 1h;
            
            proxy_connect_timeout 30s;
            proxy_send_timeout 30s;
            proxy_read_timeout 30s;
            
            proxy_ssl_verify off;
        }
        
        # ðŸ”„ BACKWARD COMPATIBILITY - /auth/* paths
        location /auth/ {
            rewrite ^/auth/(.*)$ /$1 break;
            proxy_pass https://keycloak;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header X-Forwarded-Host $host;
            
            proxy_cookie_flags ~ secure samesite=lax;
            
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
            proxy_buffering off;
            
            proxy_ssl_verify off;
        }
        
        # ðŸ”— BACKEND INTERNAL ENDPOINTS - pro auth_request a dalÅ¡Ã­ internal pouÅ¾itÃ­
        location /internal/ {
            proxy_pass http://backend;
            
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Port 443;
            
            # Pass cookies for session validation
            proxy_set_header Cookie $http_cookie;
        }
        
        # ðŸ”— BACKEND API - transparentnÄ› pro vÅ¡echny subdomÃ©ny
        location /api/ {
            proxy_pass http://backend;
            
            proxy_set_header Host $host;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Authorization $http_authorization;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Port 443;
            
            # ðŸ” Cookie security hardening for iFrame SSO
            # SameSite=None required for cross-site iFrame embedding
            # Secure flag ensures HTTPS-only transmission
            proxy_cookie_flags ~ secure samesite=none;
            
            # Cookie domain configuration for multi-tenant support
            # Rewrite domain to match current subdomain (admin.*, ten.*, etc.)
            proxy_cookie_domain backend $host;
            
            # Ensure cookie path is scoped correctly
            proxy_cookie_path / /;
        }
        
        # ðŸŒ FRONTEND - transparentnÄ› pro vÅ¡echny subdomÃ©ny (nejniÅ¾Å¡Ã­ priorita)
        
        # Cache-busted assets (bundle.js?v=timestamp, bundle.css?v=timestamp)
        # Cache aggressively - immutable content
        location ~ ^/(bundle\.js|bundle\.css) {
            proxy_pass http://frontend;
            proxy_set_header Host $host;
            
            # Aggressive caching for versioned assets
            proxy_cache_valid 200 1y;
            add_header Cache-Control "public, max-age=31536000, immutable" always;
        }
        
        # index.html - NEVER cache (always fetch fresh)
        location = / {
            proxy_pass http://frontend;
            proxy_set_header Host $host;
            
            # NO caching for index.html - always fetch fresh
            add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0" always;
            add_header Pragma "no-cache" always;
            add_header Expires "0" always;
        }
        
        location = /index.html {
            proxy_pass http://frontend;
            proxy_set_header Host $host;
            
            # NO caching for index.html - always fetch fresh
            add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0" always;
            add_header Pragma "no-cache" always;
            add_header Expires "0" always;
        }
        
        # All other frontend routes
        location / {
            # CSP je na aplikaÄnÃ­ vrstvÄ› (React, Keycloak), ne na Nginx
            # Nginx CSP by blokoval Keycloak login page resources
            
            proxy_pass http://frontend;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header X-Forwarded-Host $host;
            
            # WebSocket support pro HMR
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_http_version 1.1;
            proxy_cache_bypass $http_upgrade;
            
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
        }
    }
    
    # ðŸŽ¯ OPS SUBDOMAIN - Standalone Grafana with OIDC SSO
    server {
        listen 443 ssl http2;
        server_name ops.${DOMAIN};
        
        # SSL Configuration (same as main server)
        ssl_certificate /etc/nginx/ssl/cert.pem;
        ssl_certificate_key /etc/nginx/ssl/key.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA128-SHA256:ECDHE-RSA-AES256-SHA384;
        ssl_prefer_server_ciphers off;
        ssl_session_cache shared:SSL:10m;
        ssl_session_timeout 10m;
        
        # ðŸ“Š GRAFANA - Standalone monitoring tool (no auth_request, direct OIDC SSO)
        location /grafana/ {
            proxy_pass http://grafana;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header X-Forwarded-Host $host;
            
            # WebSocket support for live dashboards
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_http_version 1.1;
            
            # Timeouts for long-running queries
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
        }
        
        # ðŸ” KEYCLOAK SSO endpoints (needed for Grafana OIDC)
        location /realms/ {
            proxy_pass https://keycloak;
            
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto https;
            proxy_set_header X-Forwarded-Port 443;
            proxy_set_header X-Forwarded-Host $host;
            
            proxy_ssl_verify off;
        }
    }
    
    # ðŸ”€ HTTP -> HTTPS redirect
    server {
        listen 80;
        server_name ${DOMAIN} *.${DOMAIN};
        
        return 301 https://$host$request_uri;
    }
}